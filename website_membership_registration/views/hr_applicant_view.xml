<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_applicant_view_form" model="ir.ui.view">
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="membership_hr_recruitment.hr_applicant_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='section_membership_ids']/tree/field[@name='section_id']" position="after">
                <field name="type"/>
                <field name="wants_to_collaborate" />
            </xpath>
        </field>
    </record>

</odoo>
